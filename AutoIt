##WEEKLY BACKUP

#Step 1: Open the Flow properties in the Power Automate Weekly Flow and set the keybaord shortcut to "Ctrl + W"
#Step 2: Save

Run("C:\Program Files (x86)\Power Automate Desktop\PAD.Console.Host.exe")
WinWaitActive("Power Automate", "", 10)
WinMove("Power Automate","",0,0)
WinSetState("Power Automate","", @SW_MAXIMIZE)
Send("^w")
Exit

------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
##MONTHLY BACKUP

#Step 1: Open the Flow properties in the Power Automate Monthly Flow and set the keybaord shortcut to "Ctrl + M"
#Step 2: Save

Run("C:\Program Files (x86)\Power Automate Desktop\PAD.Console.Host.exe")
WinWaitActive("Power Automate", "", 10)
WinMove("Power Automate","",0,0)
WinSetState("Power Automate","", @SW_MAXIMIZE)
Send("^m")
Exit
